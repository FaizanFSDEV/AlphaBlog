<h1 class="center">All Blogger</h1>

<hr class="my-4">

<% @users.each do |user| %>

<div class="card text-center">
  <div class="card-header">
    <%= link_to gravatar_for(user), user_path(user) %>
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= link_to user.username, user_path(user) %></h5>
    <p class="card-text"><%= pluralize(user.articles.count, "article") if user.articles %></p>
    <% if logged_in? and current_user.admin? %>
    <p> <%= link_to "Delete this user", user_path(user), method: :delete, 
                                                         data: {confirm: "Are you sure?"}%>
    </p>
    <% end %>
  </div>
</div>
<div class="py-2"></div>


<% end %>


